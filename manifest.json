{
  "name": "Search the Current Site",
  "description": "Search the current site using the most popular search engine",
  "version": "1.1",
  "manifest_version": 2,
  "background": {
    "scripts": ["common.js","background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "search.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "contextMenus",
    "storage"
  ]
}
